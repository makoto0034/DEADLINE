<div class ="registration">
  <h2>新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"devise_box" %>
    </div>

    <div class="field">
      <%= f.label :name,class:"login_name"%><br />
      <%= f.text_field :name, autofocus: true,class:"devise_box" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password",class:"devise_box",placeholder:"最低#{@minimum_password_length}文字以上"%>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"devise_box",placeholder:"最低#{@minimum_password_length}文字以上"%>
    </div>

    <div class="actions">
      <%= f.submit "登録",class:"register_btn" %>
    </div>
  <% end %>
    <div class="under_link">
      <%= render "devise/shared/links" %>
    </div>
